<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/create_class"
        android:id="@+id/createClass"
        android:onClick="AdministratorNewClass.createClass"
        android:layout_above="@+id/create_class_text"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="21dp"/>

    <TextView
        android:id="@+id/create_class_text"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="89dp"/>

    <EditText android:id="@+id/class_name"
              android:layout_width="200dp"
              android:layout_height="wrap_content"
              android:hint="@string/class_name"
              android:layout_marginBottom="66dp"
              android:layout_above="@+id/createClass"
              android:layout_alignLeft="@+id/create_class_text"
              android:layout_alignStart="@+id/create_class_text"/>

</RelativeLayout>