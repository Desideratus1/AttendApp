<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent" android:layout_height="match_parent">

    <TextView
        android:textSize="20sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/request_record_text"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true" />

    <Button
        android:text="@string/request_record"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="21dp"
        android:id="@+id/request_record"
        android:layout_above="@+id/request_record_text"
        android:layout_centerHorizontal="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:hint="@string/class_name"
        android:ems="10"
        android:id="@+id/class_name"
        android:layout_marginBottom="13dp"
        android:layout_above="@+id/request_record"
        android:layout_centerHorizontal="true" />

    <ProgressBar
        style="?android:attr/progressBarStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/request_record_text"
        android:layout_alignLeft="@+id/request_record_text"
        android:layout_alignStart="@+id/request_record_text"
        android:layout_marginTop="45dp"
        android:id="@+id/bar"
        tools:visibility="invisible"
        android:indeterminate="true"/>
</RelativeLayout>